@page "/tax-settings"
@attribute [Authorize(Roles = "Admin")]
@using DotnetDemo.Services.Interfaces
@inject ITaxSettingService TaxSettingService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>稅別管理 - 零售管理系統</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">稅別管理</MudText>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">稅別列表</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenAddDialog">
                新增稅別
            </MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@_taxSettings" Dense="true" Hover="true" Loading="@_loading">
            <HeaderContent>
                <MudTh>代碼</MudTh>
                <MudTh>名稱</MudTh>
                <MudTh>稅率</MudTh>
                <MudTh>內含稅</MudTh>
                <MudTh>預設</MudTh>
                <MudTh>狀態</MudTh>
                <MudTh>操作</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Code</MudTd>
                <MudTd>@context.Name</MudTd>
                <MudTd>@context.Rate.ToString("P2")</MudTd>
                <MudTd>
                    @if (context.IsInclusive)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Success" />
                    }
                </MudTd>
                <MudTd>
                    @if (context.IsDefault)
                    {
                        <MudChip Size="Size.Small" Color="Color.Primary">預設</MudChip>
                    }
                </MudTd>
                <MudTd>
                    <MudChip Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                        @(context.IsActive ? "啟用" : "停用")
                    </MudChip>
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    @if (!context.IsDefault)
                    {
                        <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error"
                                       OnClick="@(() => Delete(context))" />
                    }
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    private List<TaxSetting> _taxSettings = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        _taxSettings = await TaxSettingService.GetAllAsync();
        _loading = false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters
        {
            { "TaxSetting", new TaxSetting { IsActive = true, Rate = 0.05m } },
            { "IsNew", true }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<TaxSettingDialog>("新增稅別", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("稅別已新增", Severity.Success);
        }
    }

    private async Task OpenEditDialog(TaxSetting taxSetting)
    {
        var parameters = new DialogParameters
        {
            { "TaxSetting", taxSetting },
            { "IsNew", false }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<TaxSettingDialog>("編輯稅別", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("稅別已更新", Severity.Success);
        }
    }

    private async Task Delete(TaxSetting taxSetting)
    {
        var result = await DialogService.ShowMessageBox(
            "確認刪除", $"確定要刪除稅別「{taxSetting.Name}」嗎？",
            yesText: "刪除", cancelText: "取消");

        if (result == true)
        {
            var (success, error) = await TaxSettingService.DeleteAsync(taxSetting.Id);
            if (success)
            {
                await LoadDataAsync();
                Snackbar.Add("稅別已刪除", Severity.Success);
            }
            else
            {
                Snackbar.Add($"刪除失敗：{error}", Severity.Error);
            }
        }
    }
}
