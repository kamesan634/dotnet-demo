@page "/units"
@attribute [Authorize]
@using DotnetDemo.Services.Interfaces
@inject IUnitService UnitService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>單位管理 - 零售管理系統</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">單位管理</MudText>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">單位列表</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenAddDialog">新增單位</MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@_units" Dense="true" Hover="true" Loading="@_loading">
            <HeaderContent>
                <MudTh>代碼</MudTh>
                <MudTh>名稱</MudTh>
                <MudTh>狀態</MudTh>
                <MudTh>操作</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="代碼">@context.Code</MudTd>
                <MudTd DataLabel="名稱">@context.Name</MudTd>
                <MudTd DataLabel="狀態">
                    <MudChip Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                        @(context.IsActive ? "啟用" : "停用")
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="操作">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error"
                                   OnClick="@(() => DeleteUnit(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    private List<Unit> _units = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        _units = await UnitService.GetAllAsync();
        _loading = false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters
        {
            { "Unit", new Unit { IsActive = true } },
            { "IsNew", true }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<UnitDialog>("新增單位", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("單位已新增", Severity.Success);
        }
    }

    private async Task OpenEditDialog(Unit unit)
    {
        var editUnit = new Unit
        {
            Id = unit.Id,
            Code = unit.Code,
            Name = unit.Name,
            IsActive = unit.IsActive
        };

        var parameters = new DialogParameters
        {
            { "Unit", editUnit },
            { "IsNew", false }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<UnitDialog>("編輯單位", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("單位已更新", Severity.Success);
        }
    }

    private async Task DeleteUnit(Unit unit)
    {
        var result = await DialogService.ShowMessageBox(
            "確認刪除", $"確定要刪除單位「{unit.Name}」嗎？",
            yesText: "刪除", cancelText: "取消");

        if (result == true)
        {
            var success = await UnitService.DeleteAsync(unit.Id);
            if (success)
            {
                await LoadDataAsync();
                Snackbar.Add("單位已刪除", Severity.Success);
            }
            else
            {
                Snackbar.Add("無法刪除已被使用的單位", Severity.Error);
            }
        }
    }
}
