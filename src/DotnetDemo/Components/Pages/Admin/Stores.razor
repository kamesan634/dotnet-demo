@page "/stores"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using DotnetDemo.Data
@inject ApplicationDbContext DbContext
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>門市管理 - 零售管理系統</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">門市管理</MudText>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">門市列表</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenAddDialog">新增門市</MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@_stores" Dense="true" Hover="true" Loading="@_loading">
            <HeaderContent>
                <MudTh>代碼</MudTh>
                <MudTh>名稱</MudTh>
                <MudTh>地址</MudTh>
                <MudTh>電話</MudTh>
                <MudTh>主要門市</MudTh>
                <MudTh>狀態</MudTh>
                <MudTh>操作</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Code</MudTd>
                <MudTd>@context.Name</MudTd>
                <MudTd>@context.Address</MudTd>
                <MudTd>@context.Phone</MudTd>
                <MudTd>
                    @if (context.IsPrimary)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" />
                    }
                </MudTd>
                <MudTd>
                    <MudChip Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                        @(context.IsActive ? "啟用" : "停用")
                    </MudChip>
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error"
                                   OnClick="@(() => DeleteStore(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    private List<Store> _stores = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        _stores = await DbContext.Stores.OrderBy(s => s.Code).ToListAsync();
        _loading = false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters<StoreDialog>
        {
            { x => x.Store, new Store() },
            { x => x.IsNew, true }
        };

        var dialog = await DialogService.ShowAsync<StoreDialog>("新增門市", parameters);
        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("門市已新增", Severity.Success);
        }
    }

    private async Task OpenEditDialog(Store store)
    {
        var parameters = new DialogParameters<StoreDialog>
        {
            { x => x.Store, store },
            { x => x.IsNew, false }
        };

        var dialog = await DialogService.ShowAsync<StoreDialog>("編輯門市", parameters);
        var result = await dialog.Result;

        if (!result!.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("門市已更新", Severity.Success);
        }
    }

    private async Task DeleteStore(Store store)
    {
        if (await DbContext.Users.AnyAsync(u => u.StoreId == store.Id))
        {
            Snackbar.Add("無法刪除有使用者的門市", Severity.Error);
            return;
        }

        var result = await DialogService.ShowMessageBox(
            "確認刪除", $"確定要刪除門市「{store.Name}」嗎？",
            yesText: "刪除", cancelText: "取消");

        if (result == true)
        {
            DbContext.Stores.Remove(store);
            await DbContext.SaveChangesAsync();
            await LoadDataAsync();
            Snackbar.Add("門市已刪除", Severity.Success);
        }
    }
}
