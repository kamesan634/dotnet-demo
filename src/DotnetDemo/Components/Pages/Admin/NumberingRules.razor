@page "/numbering-rules"
@attribute [Authorize(Roles = "Admin")]
@using DotnetDemo.Services.Interfaces
@inject INumberingRuleService NumberingRuleService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>編號規則 - 零售管理系統</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">編號規則</MudText>

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">規則列表</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenAddDialog">
                新增規則
            </MudButton>
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@_rules" Dense="true" Hover="true" Loading="@_loading">
            <HeaderContent>
                <MudTh>名稱</MudTh>
                <MudTh>單據類型</MudTh>
                <MudTh>前綴</MudTh>
                <MudTh>日期格式</MudTh>
                <MudTh>流水號長度</MudTh>
                <MudTh>目前序號</MudTh>
                <MudTh>重置週期</MudTh>
                <MudTh>狀態</MudTh>
                <MudTh>操作</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Name</MudTd>
                <MudTd>@GetDocumentTypeName(context.DocumentType)</MudTd>
                <MudTd>@context.Prefix</MudTd>
                <MudTd>@context.DateFormat</MudTd>
                <MudTd>@context.SequenceLength</MudTd>
                <MudTd>@context.CurrentSequence</MudTd>
                <MudTd>@GetResetPeriodName(context.ResetPeriod)</MudTd>
                <MudTd>
                    <MudChip Size="Size.Small" Color="@(context.IsActive ? Color.Success : Color.Default)">
                        @(context.IsActive ? "啟用" : "停用")
                    </MudChip>
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" Color="Color.Primary"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error"
                                   OnClick="@(() => Delete(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    private List<NumberingRule> _rules = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _loading = true;
        _rules = await NumberingRuleService.GetAllAsync();
        _loading = false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters
        {
            { "Rule", new NumberingRule { IsActive = true, SequenceLength = 4, ResetPeriod = "Daily" } },
            { "IsNew", true }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<NumberingRuleDialog>("新增編號規則", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("編號規則已新增", Severity.Success);
        }
    }

    private async Task OpenEditDialog(NumberingRule rule)
    {
        var parameters = new DialogParameters
        {
            { "Rule", rule },
            { "IsNew", false }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = await DialogService.ShowAsync<NumberingRuleDialog>("編輯編號規則", parameters, options);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadDataAsync();
            Snackbar.Add("編號規則已更新", Severity.Success);
        }
    }

    private async Task Delete(NumberingRule rule)
    {
        var result = await DialogService.ShowMessageBox(
            "確認刪除", $"確定要刪除編號規則「{rule.Name}」嗎？",
            yesText: "刪除", cancelText: "取消");

        if (result == true)
        {
            var (success, error) = await NumberingRuleService.DeleteAsync(rule.Id);
            if (success)
            {
                await LoadDataAsync();
                Snackbar.Add("編號規則已刪除", Severity.Success);
            }
            else
            {
                Snackbar.Add($"刪除失敗：{error}", Severity.Error);
            }
        }
    }

    private string GetDocumentTypeName(string type) => type switch
    {
        "Order" => "訂單",
        "PurchaseOrder" => "採購單",
        "StockTransfer" => "調撥單",
        "StockAdjustment" => "調整單",
        "Invoice" => "發票",
        "PurchaseReceipt" => "進貨單",
        _ => type
    };

    private string GetResetPeriodName(string period) => period switch
    {
        "Daily" => "每日",
        "Monthly" => "每月",
        "Yearly" => "每年",
        "Never" => "不重置",
        _ => period
    };
}
